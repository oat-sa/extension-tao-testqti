<div class="magnifier">
    <div class="level">{{level}}</div>
    <div class="overlay"></div>
    <div class="inner"></div>
    <div class="controls close">
        <a href="#" class="closeMagnifier" data-control="closeMagnifier" title="{{__ 'Close Magnifier'}}"><span class="icon-result-nok"></span></a>
    </div>
    <div class="controls zoom">
        <a href="#" class="control"  data-control="zoomOut" title="{{__ 'Magnify less'}}"><span class="icon-remove"></span></a>
        <a href="#" class="control" data-control="zoomIn" title="{{__ 'Magnify more'}}"><span class="icon-add"></span></a>
    </div>
</div>
